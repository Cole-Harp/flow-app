{
  "compilerOptions": {
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/**/**/**/*.ts", "**/**/**/**/*.tsx", ".next/types/**/*.ts", "app/(root)/(routes)/Root/New_Flow"],
  "exclude": ["node_modules", "./TipTapEditor/editor/components/node-selector.tsx"]
}
